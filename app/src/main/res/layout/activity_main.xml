<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/timtim"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="20dp">

        <TextView
            android:id="@+id/currInp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="textEnd"
            android:maxLines="1"
            android:lines="1"
            android:textSize="40sp"
            android:text="0"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        style="@style/rowPad">

        <Button
            style="@style/buttonFunc"
            android:onClick="clearClickAction"
            android:text="AC" />
        <Button
            style="@style/buttonFunc"
            android:onClick="negativeClickAction"
            android:text="+/-"/>
        <Button
            style="@style/buttonFunc"
            android:onClick="addPercentageAction"
            android:text="%"/>
        <Button
            style="@style/buttonFunc"
            android:onClick="mathClickButton"
            android:text="/"/>
    </LinearLayout>
    <LinearLayout
        style="@style/rowPad">
        <Button
            style="@style/buttonNumber"
            android:text="7"/>
        <Button
            style="@style/buttonNumber"
            android:text="8"/>
        <Button
            style="@style/buttonNumber"
            android:text="9"/>
        <Button
            style="@style/buttonFunc"
            android:onClick="mathClickButton"
            android:text="x"/>
    </LinearLayout>
    <LinearLayout
        style="@style/rowPad">
        <Button
            style="@style/buttonNumber"
            android:text="4"/>
        <Button
            style="@style/buttonNumber"
            android:text="5"/>
        <Button
            style="@style/buttonNumber"
            android:text="6"/>
        <Button
            style="@style/buttonFunc"
            android:onClick="mathClickButton"
            android:text="-"/>
    </LinearLayout>
    <LinearLayout
        style="@style/rowPad">
        <Button
            style="@style/buttonNumber"
            android:text="1"/>
        <Button
            style="@style/buttonNumber"
            android:text="2"/>
        <Button
            style="@style/buttonNumber"
            android:text="3"/>
        <Button
            style="@style/buttonFunc"
            android:onClick="mathClickButton"
            android:text="+"/>
    </LinearLayout>
    <LinearLayout
        style="@style/rowPad">

        <Button
            style="@style/buttonNumber"
            android:layout_weight="2"
            android:text="0"/>
        <Button
            style="@style/buttonFunc"
            android:onClick="addDecimalAction"
            android:text="."/>
        <Button
            style="@style/buttonFunc"
            android:onClick="mathClickButton"
            android:text="="/>
    </LinearLayout>
</LinearLayout>

